@model IEnumerable<Pallino.DailyActivities.WebApp.ViewModels.DailyReportListItemViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista rapportini</h2>

<p>
    @Html.ActionLink("Crea nuovo", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offsite)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Offsite)
        </td>
        <td>
            @Html.ActionLink("Edit header", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Manage", "ManageReport", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
